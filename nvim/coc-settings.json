{
    // multiple curssors
    "cursors.nextKey": "<C-n>",
    "cursors.previousKey": "<C-p>",
    "cursors.cancelKey": "<esc>",

    // also get results from hidden files except .git
    "list.source.files.excludePatterns": [
        "**/.git/**",
        "**/__pycache__/**",
        "**/.mypy_cache/**"
    ],
    "list.source.files.args": [
    "--files",
    "--no-heading",
    "--ignore-case",
    "--no-ignore",
    "--hidden"
    ],
    "list.source.grep.excludePatterns": [
        "**/.git/**",
        "**/__pycache__/**",
        "**/.mypy_cache/**"
    ],
    "list.source.grep.args": [
    "--no-heading",
    "--ignore-case",
    "--no-ignore",
    "--hidden",
    "--glob",
    "!.git/*"
    ],

    // [python]
    "python.pythonPath": "python",
    "python.formatting.provider": "yapf",
    //"python.formatting.provider": "black",
    "python.jediEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "python.linting.ignorePatterns": ["**/site-packages/**/*.py"],

    "sql.lintOnChange": false,

    "coc.preferences.formatOnSaveFiletypes": ["markdown", "go", "javascript"]
}
