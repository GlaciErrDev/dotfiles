{
    // python
    "python.jediEnabled": false,

    // multiple curssors
    "cursors.nextKey": "<C-n>",
    "cursors.previousKey": "<C-p>",
    "cursors.cancelKey": "<esc>",

    // also get results from hidden files except .git
    "list.source.files.args": [
    "--files",
    "--no-heading",
    "--ignore-case",
    "--no-ignore",
    "--hidden",
    "--glob",
    "!.git/*"
    ],
    "list.source.grep.args": [
    "--no-heading",
    "--ignore-case",
    "--no-ignore",
    "--hidden",
    "--glob",
    "!.git/*"
    ],

    "markdownlint.onChange": false


}
